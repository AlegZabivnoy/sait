{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "storageService": "writable",
    "escapeHtml": "writable",
    "addQuestion": "writable",
    "removeQuestion": "writable",
    "addOption": "writable",
    "removeOption": "writable",
    "handleQuestionTypeChange": "writable",
    "cancelCreate": "writable",
    "startQuiz": "writable",
    "editQuiz": "writable",
    "deleteQuiz": "writable",
    "nextQuestion": "writable",
    "previousQuestion": "writable",
    "restartQuiz": "writable",
    "exitQuiz": "writable",
    "deleteResult": "writable",
    "clearAllResults": "writable",
    "navigateToHome": "writable"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "off"
  }
}
